<div class="dash-wrap">
  <div class="new-rant-wrap">
    <div class="thumbnail">
      <%= image_tag 'jeff.jpg' %>
      <h3 class="username"><%= link_to @fullname, edit_user_path(:id) %></h3>
    </div>
    <hr/>
    <div class="rant-form">
      <%= form_for [@user, @new_rant] do |form| %>
        <%= form.label :title, "A rant about" %>
        <%= @new_rant.errors.full_messages_for(:title).first %>
        <br/>
        <%= form.text_field :title %>
        <br/>
        <%= form.label :rant, "Rant" %>
        <br/>
        <%= form.text_area :rant %>
        <br/>
        <%= form.submit "RANT" %>
      <% end %>
    </div>
  </div>
  <div class="rant-feed">
    <div class="user-rants">
      <% if @all_rants.length > 0 %>
        <h1>Latest Rants</h1>
        <% @all_rants.each do |rant| %>
          <hr/>
          <p><%= rant.user.first_name %> <%= rant.user.last_name %></p>
          <p><%= rant.title %></p>
          <p><%= rant.rant %></p>
        <% end %>
      <% end %>

      <% if @user_rants.length > 0 %>
        <h1>My Rants</h1>
        <% @user_rants.each do |rant| %>
          <hr/>
          <p><%= rant.title %></p>

          <p><%= rant.rant %></p>
          <br/>
          <% if rant.user_id == current_user.id %>
          <%= button_to "DELETE", user_rant_path(@user, rant.id), method: :delete, html: { class: "delete"} %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
