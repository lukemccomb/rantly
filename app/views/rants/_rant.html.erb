<%= div_for rant do %>
  <div class="user-image">
    <%= image_tag(rant.user.image_url, :class => 'thumb') %>
  </div>
  <h2><%= hash_tagger(rant.title) %></h2><br/>
  <%= link_to "#{rant.user.first_name} #{rant.user.last_name}", user_path(rant.user.id) %>
    <% if rant.user != current_user && !request.original_url.include?("/users/#{rant.user_id}") %>
      <% if following_user(rant.user_id) %>`
        <%= dash_unfollow_button(rant.user) %>
      <% else %>
        <%= dash_follow_button(rant.user) %>
      <% end %>
    <% end %>
  <br/>
  <%= link_to rant_path(rant.id) do %>
    <%= markdown(hash_tagger(rant.rant)) %>
  <% end %>
  <div class="favorite-wrap">
  <%= rant_favorites(rant) %>
  </div>
  <% if rant.user_id == current_user.id %>
    <%= button_to "DELETE", rant_path(rant.id), method: :delete, html: {class: "delete"} %>
  <% end %>
  <hr/>
<% end %>
