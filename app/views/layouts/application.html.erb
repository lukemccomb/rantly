<!DOCTYPE html>
<html>
<head>
  <title>Rantly</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <div class="logo-box">
    <div class="logo">
      <%= link_to 'Rant.ly', main_path %>
    </div>
  </div>
  <% unless current_user %>
    <div class="login_reg">
      <%= link_to 'Login', new_session_path, class: 'login_link' %>
      <%= link_to 'JOIN', new_user_path, class: 'register_link join_box' %>
    </div>
  <% else %>
    <div class="main-nav">
      <nav>
        <%= link_to "Dashboard", dashboard_path %> |
        <%= link_to "Following", user_following_path(current_user.id) %> |
        <%= link_to "Favorites" %> |
        <%= link_to "Search" %>
      </nav>
      <%= link_to 'LOGOUT', session_path, method: :delete, class: 'logout-link logout-box' %>
    </div>
  <% end %>
</header>

<%= yield %>

</body>
</html>
