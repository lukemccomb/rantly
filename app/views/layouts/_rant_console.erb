<div class="new-rant-wrap">
  <div class="thumbnail">
    <%= image_tag(current_user.image_url, :alt => current_user.username) %>
    <h3 class="ranter-name"><%= link_to "#{current_user.first_name} #{current_user.last_name}", edit_user_path(current_user.id) %></h3>
  </div>
  <hr/>
  <div class="rant-form">
    <%= form_for @rant do |form| %>
      <%= form.label :title, "A rant about" %>
      <%= @rant.errors.full_messages_for(:title).first %>
      <br/>
      <%= form.text_field :title %>
      <br/>
      <%= form.label :rant, "Rant" %>
      <%= @rant.errors.full_messages_for(:rant).first %>
      <br/>
      <%= form.text_area :rant %>
      <br/>
      <%= form.submit "RANT", :class => 'rant-button' %>
    <% end %>
  </div>
</div>