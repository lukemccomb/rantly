<div class="logo-box">
  <div class="logo">
    <%= link_to 'Rant.ly', main_path %>
  </div>
</div>
<% unless current_user %>
  <div class="login_reg">
    <%= link_to 'Login', new_session_path, class: 'login_link' %>
    <%= link_to 'JOIN', new_user_path, class: 'register_link join_box' %>
  </div>
<% else %>
  <div class="main-nav">
    <nav>
      <%= link_to "Dashboard", dashboard_path %> |
      <%= link_to "Following", user_following_path(current_user.id) %> |
      <%= link_to "Favorites", user_favorites_path(current_user.id) %> |
      <%= link_to "Search", new_search_path %>
    </nav>
    <%= link_to 'LOGOUT', session_path, method: :delete, class: 'logout-link logout-box' %>
  </div>
<% end %>